<div class="hero-unit">
<h1>Listing Artists</h1>

  <%= search_form_for @search do |f| %>
    <div class="field">
      <%=f.label :name_cont, "Search by name" %>
      <%= f.text_field :name_cont %>
    </div>
    <%= f.submit :class => 'btn btn-primary btn-large' %>
  <% end %>

<table class="table table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Bio</th>

  </tr>
</thead>
<tbody>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.name %></td>
    <td><%= artist.bio %></td>
    <td><%= link_to 'Show', artist %></td>

    <% if can? :edit, @artist %>
    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <% end %>
    <% if can? :delete, @artist %>
     <td><%= link_to 'Delete', artist, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tr>
    <% end %>
    </table>
    <br />
    <% if can? :new, @artist %>
    <%= link_to 'New Artist', new_artist_path %>
    <% end %>
</div>
  </tbody>
</table>
