<h1>Listing Purchases</h1>
<table>
  <tr>
    <th>Purchase Price</th>

  </tr>

<% @purchases.each_with_index do |purchase, index| %>
  <tr>

    <td><%= purchase.price %></td>

    <td><%= link_to 'Show', purchase %></td>

    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
     <td><%= link_to 'Delete', purchase, method: :delete, data: {confirm: 'Are you sure?'} %></td>

  </tr>
<% end %>
</table>

<br />

