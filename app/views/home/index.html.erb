
  <h1>XTUNES</h1>

<table>
  <tr>
    <th>Song</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Price</th>
    <th>Genre</th>
    <th>More Info</th>
    <th>Purchase</th>
    <th>Buy</th>

  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.artist %></td>
    <td><%= song.album %></td>
    <td><%= song.price %></td>
    <td><%= song.genre %></td>
    <td><%= link_to song.name, song_path(song)%></td>
    <td><%= check_box_tag 'Purchase'%>
    <td><%= link_to "Purchase", new_song_purchase_path(song) %><td>

  </tr>
<% end %>
</table>