<div class="hero-unit">
<h1>Listing Genres</h1>

  <%= search_form_for @search do |f| %>
    <div class="field">
      <%=f.label :name_cont, "Search by name" %>
      <%= f.text_field :name_cont %>
    </div>
    <%= f.submit :class => 'btn btn-primary btn-large' %>
  <% end %>

<table class="table table">
  <thead>
    <tr>
    <th>Genre</th>
    </tr>
  </thead>
<tbody>

<% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to 'Show', genre %></td>
    <% if can? :edit, @genre %>
    <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
    <% end %>
    <% if can? :delete, @genre %>
     <td><%= link_to 'Delete', genre, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tr>
    <% end %>
    </table>

    <br />
    <% if can? :new, @genre %>
    <%= link_to 'New Genre', new_genre_path %>
    <% end %>
</div>
  </tbody>
</table>