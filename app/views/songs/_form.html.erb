<div class="hero-unit">
<%= form_for(@song) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <br />
  <div class="field">
  <%= f.label :artist %>
  <%= f.select :artist, Artist.all.map { |a| [a.name] } %>
  <br />
  <div class="field">
  <%= f.label :album %>
  <%= f.select :album, Album.all.map { |a| [a.name] } %>
  </div>
  <br />
  <div class="field">
  <%= f.label :genre %>
  <%= f.select :genre, Genre.all.map { |a| [a.name] } %>
  </div>
  <br />
  <div class="field">
    <%= f.label :audiofile %>
    <%= f.file_field :audiofile %>
    <%= f.label :remote_audiofile_url, "or audiofile URL" %><br />
    <%= f.text_field :remote_audiofile_url %>
  </div>
  <br />
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
    <%= f.label :remote_photo_url, "or image URL" %><br />
    <%= f.text_field :remote_photo_url %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
