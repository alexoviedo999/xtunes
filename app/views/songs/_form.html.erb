
<%= form_for(@song) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
  <%= f.label :artist %><br />
  <%= f.select :artist, Artist.all.map { |a| [a.name] } %>
  <div class="field">
  <%= f.label :album %><br />
  <%= f.select :album, Album.all.map { |a| [a.name] } %>
  </div>
  <div class="field">
  <%= f.label :genre %><br />
  <%= f.select :genre, Genre.all.map { |a| [a.name] } %>
  </div>
  <div class="field">
    <%= f.label :audiofile %><br />
    <%= f.file_field :audiofile %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
