

<div class="well">
  <div class="thumbnail">
    <%= image_tag @song.photo.image_url.to_s %>
  </div>
  <h4>
    <b>Name:</b>
    <%= @song.name %>
    <br>
    <b>Artist:</b>
    <%= @song.artist %>
    <br>
    <b>Genre:</b>
    <%= @song.genre %>
    <br>
    <b>Album:</b>
    <%= @song.album %>
    <br>
    <b>Price:</b>
    <%= number_to_currency (@song.price) %>
    <br>
     <%= link_to "Purchase",new_song_purchase_path(@song) %>
    <br>
  </h4>

  <% if can? :update, @song %>
  <%= link_to 'Edit', edit_song_path(@song) %> |
  <%= link_to 'Back', songs_path %>
  <% end %>
</div>
