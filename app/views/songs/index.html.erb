
<div class="hero-unit">
<h1>Listing Songs</h1>

  <%= search_form_for @search do |f| %>
  <div class="field">
    <%=f.label :name_cont, "Search by name" %>
    <%= f.text_field :name_cont %>
  </div>
  <%= f.submit :class => 'btn btn-primary btn-large' %>
  <% end %>
<table class="table table">
  <thead>
  <tr>
    <th>Song</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Price</th>
    <th>Genre</th>

  </tr>
</thead>
<tbody>
<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.artist %></td>
    <td><%= song.album %></td>
    <td><%= song.price %></td>
    <td><%= song.genre %></td>


    <td><%= link_to 'Show', song %></td>

    <% if can? :edit, @song %>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <% end %>
     <% if can? :delete, @song %>
    <td><%= link_to 'Delete', song, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>

  </tr>
<% end %>
  </tbody>
</table>

<br />

<% if can? :new, @song %>
<%= link_to 'New Song', new_song_path %>
<% end %>
</div>